                        <!--android:id="@+id/editTextThemeName" />-->

                    <!--<ProgressBar-->
                        <!--style="?android:attr/progressBarStyleHorizontal"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_weight="0.33"-->
                        <!--android:id="@+id/progressbar_level" />-->

                </TableRow>

                <!-- ============ -->
                <!-- SPINNERS     -->
                <!-- ============ -->

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <Spinner
                        android:id="@+id/patternSpinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33" />

                    <Spinner
                        android:id="@+id/graphicSpinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"/>

                    <Spinner
                        android:id="@+id/themeSpinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"/>
                 </TableRow>

            <!-- ============ -->
            <!-- TOGGLES      -->
            <!-- ============ -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- ============ -->
                <!-- MUSIC TOGGLE -->
                <!-- ============ -->

                <ToggleButton
                    android:text="Sound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/musicToggleButton"
                    android:layout_weight="1"
                    android:textOff="Music On"
                    android:textOn="Music Off" />

                <!-- ============================================= -->
                <!-- ============================================= -->
                <!-- RECORD TOGGLE                                 -->
                <!-- ============================================= -->
                <!-- ============================================= -->

                <ToggleButton
                    android:text="Record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/toggle"
                    android:layout_weight="1"
                    android:textOff="Record On"
                    android:textOn="Record Off" />
            </TableRow>

        </TableLayout>

    </LinearLayout>

    <!-- =================== -->
    <!-- PATTERN GRAPHIC     -->
    <!-- =================== -->

    <LinearLayout android:id="@+id/topLinearLayout"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_width="fill_parent"
        android:paddingBottom="@dimen/activity_vertical_margin_bottom"
        android:paddingTop="@dimen/activity_vertical_margin_top">

